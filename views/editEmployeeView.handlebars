<form method="POST" action='/employees/edit/{{data.id}}'>
  <table>
  <tr>
   <td valign="top">
    <label for="fname">First Name:</label>
   </td>
   <td valign="top">
    <input  type="text" name="fname" size="30" value="{{data.firstName}}">
   </td>
  </tr>
  <tr>
   <td valign="top">
    <label for="lname">Last Name:</label>
   </td>
   <td valign="top">
    <input  type="text" name="lname" size="30" value="{{data.lastName}}">
   </td>
  </tr>
  <tr>
   <td colspan="2">
    <input type="submit" width="100"/>
   </td>
  </tr>
 </table>
</form>

